{
  "name": "persona-engine",
  "version": "0.0.1",
  "description": "Core NPC persona engine with web-llm integration",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "private": true,
  "scripts": {
    "lint": "biome check src",
    "build": "tsc",
    "test": "vitest run",
    "test:e2e": "xvfb-run -a vitest run -c vitest.config.browser.ts",
    "test:e2e:headed": "HEADED=true vitest run -c vitest.config.browser.ts",
    "test:unit": "vitest run -c vitest.config.ts"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "latest",
    "persona-storage": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@vitest/browser": "4.0.6",
    "@vitest/browser-playwright": "4.0.6",
    "playwright": "1.56.1",
    "typescript": "latest",
    "vitest": "latest"
  }
}
